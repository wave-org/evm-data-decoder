{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "target": "ES2017"
  },
  "include": ["./src/**/*.ts"]
}
